model StorageProviderConfig {
  id        String   @id @default(cuid(2))
  name      String   @unique
  provider  String
  config    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  storageUnits StorageUnit[]

  @@index([provider])
}

model StorageUnit {
  id                      String   @id @default(cuid(2))
  name                    String   @unique
  provider                String
  isDefault               Boolean  @default(false)
  storageProviderConfigId String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  mediaContainers       MediaContainer[]
  storageProviderConfig StorageProviderConfig? @relation(fields: [storageProviderConfigId], references: [id])

  @@index([provider])
  @@index([isDefault])
  @@index([storageProviderConfigId])
}
