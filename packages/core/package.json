{
  "name": "@longpoint/core",
  "version": "0.0.3",
  "scripts": {},
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.17.0",
    "axios": "^1.6.0",
    "better-auth": "^1.3.27",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^8.1.0",
    "nestjs-pino": "^4.4.1",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "prisma": "^6.17.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "^build",
          "db:gen"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "packages/core"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/packages/core/dist/package.json",
          "{workspaceRoot}/packages/core/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/packages/core/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@longpoint/core:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@longpoint/core:build:development"
          },
          "production": {
            "buildTarget": "@longpoint/core:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker:build": {
        "dependsOn": [
          "build"
        ]
      },
      "db:gen": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma generate",
          "cwd": "packages/core/src/database"
        }
      },
      "db:migrate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma migrate dev",
          "cwd": "packages/core/src/database"
        }
      },
      "db:push": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma db push",
          "cwd": "packages/core/src/database"
        }
      },
      "db:seed": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma db seed",
          "cwd": "packages/core/src/database"
        }
      }
    },
    "name": "@longpoint/core"
  }
}
