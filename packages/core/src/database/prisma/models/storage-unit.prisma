model StorageUnit {
  id        String   @id @default(cuid(2))
  name      String   @unique
  provider  String
  isDefault Boolean  @default(false)
  /// Provider-specific configuration
  config    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mediaContainers MediaContainer[]

  @@index([provider])
  @@index([isDefault])
}
