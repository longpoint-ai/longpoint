{
  "name": "@longpoint/sdk-generator",
  "version": "0.0.1",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "generate:typescript": "npx tsx src/sdk-generator.ts typescript http://localhost:3000/docs-json ../../packages/typescript-sdk && npx nx build @longpoint/sdk"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "openapi-typescript": "^7.4.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "nx": {
    "targets": {
      "create:typescript": {
        "executor": "nx:run-script",
        "options": {
          "script": "generate:typescript",
          "cwd": "{workspaceRoot}/tools/sdk-generator"
        }
      }
    }
  }
}
