{
  "name": "longpoint",
  "version": "0.0.6",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "longpoint": "./dist/index.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@longpoint/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "name": "cli",
    "targets": {
      "compile": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "packages/cli/dist",
          "main": "packages/cli/src/index.ts",
          "tsConfig": "packages/cli/tsconfig.lib.json",
          "format": [
            "esm"
          ],
          "declarationRootDir": "packages/cli/src"
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cp -r packages/cli/templates packages/cli/dist/templates"
        },
        "dependsOn": [
          "compile"
        ]
      }
    }
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "14.0.1",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.3.2",
    "create-longpoint": "0.0.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
